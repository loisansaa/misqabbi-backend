{
  "name": "misqabbi-backend",
  "type": "module",
  "version": "1.0.0",
  "description": "This is the backend for the Misqabbi Store, an e-commerce platform that showcases **Misqabbi**, a women-owned fashion brand specializing in made-to-measure pieces designed exclusively for women.",
  "main": "index.js",
  "scripts": {
    "dev": "npm run start:dev",
    "start": "npm run start:prod",
    "start:dev": "cross-env NODE_ENV=development nodemon server.js",
    "start:preview": "cross-env NODE_ENV=preview node server.js",
    "start:staging": "cross-env NODE_ENV=staging node server.js",
    "start:prod": "cross-env NODE_ENV=production node server.js",
    "format:check": "npx prettier --check .",
    "format:fix": "npx prettier --write .",
    "lint": "eslint .",
    "prepare": "husky",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {}
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.md": [
      "prettier --write"
    ],
    "*.yml": [
      "prettier --write"
    ],
    "*.yaml": [
      "prettier --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Anorme/misqabbi-backend.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Anorme/misqabbi-backend/issues"
  },
  "homepage": "https://github.com/Anorme/misqabbi-backend#readme",
  "dependencies": {
    "@logtail/node": "^0.5.5",
    "@logtail/winston": "^0.5.5",
    "bcrypt": "^6.0.0",
    "cross-env": "^10.0.0",
    "dotenv-flow": "^4.1.0",
    "envalid": "^8.1.0",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "joi": "^18.0.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.16.4",
    "morgan": "^1.10.0",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-local": "^1.0.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@eslint/json": "^0.12.0",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^10.1.5",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "jest": "^30.0.4",
    "lint-staged": "^16.1.2",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "supertest": "^7.1.3"
  }
}
